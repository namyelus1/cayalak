@model EntityLayer.Concrete.Expereince
@{
    ViewData["Title"] = "ExpereinceUpdatae";
    Layout = "~/Views/Shared/_coronolayout.cshtml";
}


@using (Html.BeginForm("ExpereinceUpdate", "Expereince", FormMethod.Post))
{

    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">

                <p class="card-description">  Deneyim Düzenleme Paneli </p>
                <form class="forms-sample">

                    <div class="form-group">
                        <label for="exampleInputName1">ExpereinceId</label>
                    
                        @Html.TextBoxFor(x=>x.ExpereinceID, new  {@class= "form-control"})
                    </div>
                    <div class="form-group">
                        <label for="exampleInputName1">Başlık</label>
                      
                        @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label for="exampleInputName1">Tarih</label>
                        @Html.TextBoxFor(x => x.Date, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label for="exampleInputName1">resim</label>
                        @Html.TextBoxFor(x => x.ImageUrl, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label for="exampleTextarea1">Açıklama</label>
                        @Html.TextAreaFor(x => x.Decription, new { @class = "form-control" })
                    </div>
                    <button type="submit" class="btn btn-primary">Düzenle</button>
                    <button class="btn btn-dark">İptal</button>
                </form>
            </div>
        </div>
    </div>
}