@model EntityLayer.Concrete.Message
@{
    ViewData["Title"] = "ContactDetails";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">

            <p class="card-description"> Mesaj Detay Paneli </p>
            <form class="forms-sample">

                <div class="form-group">
                    <label for="exampleInputName1">MesajID</label>

                    @Html.TextBoxFor(x => x.MessageID, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label for="exampleInputName1">Ad</label>

                    @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label for="exampleInputName1">Mail</label>
                    @Html.TextBoxFor(x => x.Mail, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label for="exampleInputName1">Tarih</label>
                    @Html.TextBoxFor(x => x.Date, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label for="exampleTextarea1">Açıklama</label>
                    @Html.TextAreaFor(x => x.Content,6, 3 ,new { @class = "form-control" })
                </div>
              <a asp-action="Index" class="btn btn-primary">İletşim sayfası </a>
                
            </form>
        </div>
    </div>
</div>

